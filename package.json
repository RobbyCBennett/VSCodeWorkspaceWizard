{
	"name": "workspaceWizard",
	"displayName": "Workspace Wizard",
	"description": "Easily create, organize, & switch workspaces",
	"version": "1.0.0",
	"publisher": "rob-bennett",
	"repository": {
		"type": "git",
		"url": "https://github.com/RobbyCBennett/VSCodeWorkspaceWizard.git"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"engines": {
		"vscode": "^1.77.1"
	},
	"categories": [
		"Other",
		"Keymaps"
	],
	"keywords": [
		"Switch",
		"Workspace",
		"Organize",
		"Sidebar",
		"QuickPick"
	],
	"icon": "icon.png",
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "workspaceWizard.selectWorkspacesFolder",
				"title": "Select Workspaces Folder"
			},
			{
				"command": "workspaceWizard.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			}
		],
		"configuration": {
			"title": "Workspace Wizard",
			"properties": {
				"workspaceWizard.general.startOnExistingWindow": {
					"type": "string",
					"default": "None",
					"enum": ["None", "QuickPick", "Sidebar"],
					"description": "Start with workspaces when an existing/used window is opened"
				},
				"workspaceWizard.general.startOnNewWindow": {
					"type": "string",
					"default": "Sidebar",
					"enum": ["None", "QuickPick", "Sidebar"],
					"description": "Start with workspaces when a new/blank window is opened"
				},
				"workspaceWizard.general.watchForChanges": {
					"type": "boolean",
					"default": false,
					"description": "Watch for changes to the workspaces folder and its descendants"
				},

				"workspaceWizard.quickPick.defaultOpenAction": {
					"type": "string",
					"default": "Open in Current Window",
					"enum": ["Open in Current Window", "Open in New Window"],
					"description": "What happens when a workspace is clicked or enter is pressed"
				},
				"workspaceWizard.quickPick.showFolders": {
					"type": "string",
					"default": "All Folders",
					"enum": ["All Folders", "Folders with Workspace Files", "No Folders"],
					"description": "Show folders in the quick pick, otherwise flatten the tree"
				},

				"workspaceWizard.sidebar.defaultOpenAction": {
					"type": "string",
					"default": "Open in Current Window",
					"enum": ["Open in Current Window", "Open in New Window"],
					"description": "What happens when a workspace is clicked or space is pressed"
				},
				"workspaceWizard.sidebar.expandFolders": {
					"type": "boolean",
					"default": true,
					"description": "Expand folders in the sidebar by default"
				},
				"workspaceWizard.sidebar.showFolders": {
					"type": "string",
					"default": "All Folders",
					"enum": ["All Folders", "Folders with Workspace Files", "No Folders"],
					"description": "Show folders in the sidebar, otherwise flatten the tree"
				}
			}
		},
		"menus": {
			"view/title": [
				{
					"command": "workspaceWizard.selectWorkspacesFolder",
					"when": "view == workspaceWizard"
				},
				{
					"command": "workspaceWizard.refresh",
					"when": "view == workspaceWizard",
					"group": "navigation"
				}
			]
		},
		"views": {
			"workspaceWizard": [
				{
					"id": "workspaceWizard",
					"name": "Workspaces"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "workspaceWizard",
					"title": "Workspaces",
					"icon": "$(folder-library)"
				}
			]
		}
	}
}
